<%- include("partials/header.ejs") %>

<div class="container my-5">
    <p class="fs-3 fw-light">
        <span class="fw-bold"><%= locals.heading ? heading : "Addiing new" %> note for:</span>
        <%= book.book_title %>
    </p> 

    <form class="bg-light p-3 rounded-4" action="<%= action %>" method="post">
        <div class="mb-3">
          <label for="note_text" class="form-label">
            <span class="fw-bold fs-5">Note:</span> 
          </label>
          <input type="text" class="form-control border border-secondary" id="note_text" name="note_text" value="<%= locals.note ? note.note_text : "" %>" required>
        </div>

        <div class="mb-3">
            <label for="id" class="form-label" hidden>
              <span class="fw-bold fs-5">Id:</span> 
            </label>
            <input type="text" class="form-control border border-secondary" id="id" name="id" value="<%= book.id %>" hidden>
        </div>

        <button type="submit" class="btn btn-primary fs-3 w-100 mt-3">Submit</button>
      </form>
</div>

<%- include("partials/footer.ejs") %>