<%- include("partials/header.ejs") %>

<div class="container my-5">
    <form class="bg-light p-3 rounded-4" action="<%= action %>" method="post">
        <div class="mb-3">
          <label for="title" class="form-label">
            <span class="fw-bold fs-5">Title:</span> 
          </label>
          <input type="text" class="form-control border border-secondary" id="title" name="title" required value="<%= locals.book ? book.book_title : "" %>">
        </div>
        
        <div class="mb-3">
            <label for="isbn_code" class="form-label">
                <span class="fw-bold fs-5">ISBN Code:</span> 
            </label>
            <input type="text" class="form-control border border-secondary" id="isbn_code" name="isbn_code" value="<%= locals.book ? book.isbn_code : "" %>" required>
        </div>
        
        <div class="mb-3">
            <label for="author" class="form-label">
                <span class="fw-bold fs-5">Author: </span>
            </label>
            <input type="text" class="form-control border border-secondary" id="author" name="author" value="<%= locals.book ? book.author : "" %>" required>
        </div>

        <div class="mb-3">
            <label for="reviewing" class="form-label">
                <span class="fw-bold fs-5">Reviewing: </span>
            </label>
            <textarea class="new-text-area form-control border border-secondary" name="reviewing" id="reviewing"><%= locals.book ? book.reviewing : "" %></textarea>
        </div>

        <div class="mb-3">
            <label for="reviewer" class="form-label">
                <span class="fw-bold fs-5">Reviewer:</span> 
            </label>
            <input type="text" class="form-control border border-secondary" id="reviewer" name="reviewer"
            value="<%= locals.book ? book.reviewer : "" %>">
        </div>

        <div class="mb-3">
            <label for="read_date" class="form-label">
                <span class="fw-bold fs-5">Read date:</span> 
            </label>
            <input type="date" class="form-control border border-secondary" id="read_date" name="read_date" value="<%= locals.book ? book.date_read : "" %>">
        </div>

        <div class="mb-3">
            <label for="rating" class="form-label">
                <span class="fw-bold fs-5">Rating:</span> 
            </label>
            <input type="text" class="form-control border border-secondary" id="rating" name="rating" value="<%= locals.book ? book.rating : "" %>">
            <div id="emailHelp" class="form-text fs-6 text-grey fw-light fst-italic">Max rating is 10</div>
        </div>

        <button type="submit" class="btn btn-primary fs-3 w-100 mt-3">Submit</button>
      </form>
</div>

<%- include("partials/footer.ejs") %>